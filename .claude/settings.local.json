{
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(git add:*)",
      "Bash(git push origin main)",
      "Bash(git rm:*)",
      "Bash(black:*)",
      "Bash(isort:*)",
      "Bash(python:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "black . && isort . --profile black",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Write", 
        "hooks": [
          {
            "type": "command",
            "command": "black . && isort . --profile black",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command", 
            "command": "black . && isort . --profile black",
            "timeout": 15
          }
        ]
      }
    ]
  }
}